<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/image/Home/logoApus.jpg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/fonts/themify-icons/themify-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/a314b80a3a.js" crossorigin="anonymous"></script>
    
    <script src="/ckeditor/ckeditor.js"></script>
    <title>Apus Tarot Shop - Hệ thống quản trị</title>
</head>
<body>
    <div id="wrapper" class="show row no-gutters"> 
        <!-- LEFT -->
        {{> left}}
        <!-- RIGHT -->
        <div class="c-10 col-md-10 col-sm-10 main-wrapper">
            <!-- HEADER -->
            {{> adheader}}
            <!-- MAIN CONTENT -->
            {{{body}}}
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/javascript/admin.js"></script>
    <script>
        var pagination = document.getElementById('pagination');
        var url = location.pathname;
        var myPage="";
        if({{size}}>1){
            var previous = {{currentPage}} - 1;
            var next = {{currentPage}} + 1;
            if({{currentPage}}!==1){
                myPage = "<li class='pagination-item'>"+
                        "<a href='"+url+"?page="+previous+"' class='pagination-item__link'><i class='fas fa-arrow-left'></i></a></li>"
            }
            for(var i = 1; i <= {{size}}; i++){
                if(i == {{currentPage}}){
                    myPage += "<li class='pagination-item pagination-item--active'>"+
                                "<a href='"+url+"?page="+i+"' class='pagination-item__link pagination-item__link--active'>"+i+"</a></li>"
                }else{
                    myPage += "<li class='pagination-item'>"+
                                "<a href='"+url+"?page="+i+"' class='pagination-item__link'>"+i+"</a></li>"
                }
            }
            if({{currentPage}}!=={{size}}){
                myPage += "<li class='pagination-item'>"+
                        "<a href='/admin/product/list?page="+next+"' class='pagination-item__link'><i class='fas fa-arrow-right'></i></a></li>"
            }
        };
        pagination.innerHTML = myPage;
    </script>
</body>
</html>