<div class="card">
    <div class="card-header">
        THÊM ẢNH CHO {{title}}
    </div>
    {{#each slider}}
    <div class="input-group mb-3">
        <label for="content" class="input-group-text" id="basic-addon1">Nội dung</label>
        <input disabled type="text" id="content" name="content" value="{{this.content}}" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
    </div>

    <div class="input-group mb-3">
        <label for="link" class="input-group-text" id="basic-addon2">Đường Dẫn</label>
        <input disabled type="text" id="link" name="link" value="{{this.link}}" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon2">
    </div>
    <div class="input-group mb-3">
        <form action="/admin/slider/image/{{this.id}}" method="POST" enctype="multipart/form-data" style="width:100%">
            <div class="input-group mb-3">
                <input onchange="previewUpload(event)" type="file" name="imageSlide" id="imageSlide" class="inputfile">
                <label for="imageSlide" class="btn btn-primary label-image" id="labelImage">Chọn ảnh slider</label>
                <img id="imagePreview" alt="">
            </div>

            <div class="input-group mb-3" style="margin-top: 15px;">
                <label for="text" class="input-group-text" id="basic-addon2">Nội dung ảnh</label>
                <input type="text" id="text" name="text" value="" class="form-control" placeholder="Nhập nội dung ảnh" aria-label="" aria-describedby="basic-addon2">
            </div>
            
            <div class="input-group mb-3" style="margin-top: 15px;">
                <label for="detail" class="input-group-text" id="basic-addon2">Nội dung chi tiết</label>
                <input type="text" id="detail" name="detail" value="" class="form-control" placeholder="Nhập nội dung chi tiết" aria-label="" aria-describedby="basic-addon2">
            </div>
            <div class="input-group">
            <button type="submit" class="modal__btn">Thêm Ảnh</button>
            </div>
        </form>
        <div class="input-group">
            <a href="/admin/slider/list" class="modal__btn btnBack">
                QUAY LẠI
            </a>
        </div>
    </div>
    {{/each}}
</div>