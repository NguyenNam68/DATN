<div class="main">
    <div class="row">
        <div class="c-12 col-md-12 col-sm-12">
            <h3 class="title-table">THÔNG TIN {{title}}</h3>
            <div class="table-data__tool row">
                <div class="table-data__tool--left row c-7 col-md-7 col-sm-7">
                    <div class="input__wrapper c-7 col-md-7 col-sm-7">
                        <input type="text" name="searchData" class="input__search form-control" placeholder="Nhập thông tin tìm kiếm...">
                        <i class="input__search--icon fas fa-search"></i>
                    </div>
                    <div class="select__wrapper c-5 col-md-5 col-sm-5">
                        <select name="time" id="" class="select__input form-control">
                            <option value="" select="selected">Today</option>
                            <option value="">3 Days</option>
                            <option value="">1 Week</option>
                        </select>
                    </div>
                </div>
                <div class="table-data__tool--right row c-5 col-md-5 col-sm-5">
                    <button class="btn btn-primary btn__add">THÊM {{title}}</button>
                </div>
            </div>
            <div class="table-data__wrapper">
                <table class="table-data__content table-layout" border="2" cellspacing="1">
                    <thead>
                        <tr>
                            <th>Nội dung slider</th>
                            <th>Đường dẫn</th>
                            <th>Tình trạng</th>
                            <th>View</th>
                            <th></th>
                            <th colspan="2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each slider}}
                        <tr id="{{this.id}}">
                            <td class="shrink">
                                <span>{{this.content}}</span>
                            </td>
                            <td class="shrink">
                                <span>{{this.link}}</span>
                            </td>
                            <td class="shrink">
                                {{#if this.status}}
                                <a href="{{this.id}}" class="data-status data-status__on">
                                    Hiển thị
                                </a>
                                {{else}}
                                <a href="{{this.id}}" class="data-status data-status__off">
                                    Không hiển thị
                                </a>
                                {{/if}}
                            </td>
                            <td class="shrink table-data__detail" id="detailProduct" style="cursor:pointer; color: purple">Xem Ảnh Slider</td>
                            <td class="shrink">
                                <a href="/admin/slider/image/{{this.id}}" class="data-image__add">
                                    <i class="fas fa-plus"></i>
                                    Hình Ảnh
                                </a>
                            </td>
                            <td class="shrink" style="padding: 26px">
                                <a href="/admin/slider/edit/{{this.id}}" class="table-data__edit">
                                    <i class="table-data__icon fas fa-edit"></i>
                                </a>
                                <a href="/admin/slider/list/delete/{{this.id}}" class="table-data__delete">
                                    <i class="table-data__icon fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-12 page">
            <nav> 
                <ul class="pagination home-product__pagination" id="pagination">
                    
                </ul>
            </nav>
        </div>
    </div>
</div>
<!--Modal Add-->
<div class="modal js-modal">
    <div class="modal-containe--tall js-modal-container">
        <div class="modal-close js-modal-close">
            <i class="ti-close"></i>
        </div>
        <header class="modal-header">
            <i class="ti-bag modal-header-icon">
                THÊM MỚI {{title}}
            </i>
        </header>
        <div class="modal-body">
            <form action="/admin/slider/list" method="POST">
                <div class="modal-wrap">
                    <div class="modal-box">
                        <label for="content" class="modal-label--tall">
                            <i class="fas fa-box"></i>
                            Nội dung {{title}}
                        </label>
                        <input type="text" id="content" class="modal-input--tall" name="content" value="" placeholder="Nhập nội dung {{title}}">
                    </div>
                </div>
                
                <div class="modal-wrap">
                    <div class="modal-box">
                        <label for="link" class="modal-label--tall">
                            <i class="fas fa-link"></i>
                            Đường dẫn
                        </label>
                        <input type="text" id="link" class="modal-input--tall" name="link" value="" placeholder="Nhập đường dẫn">
                    </div>
                </div>

                <button class="modal__btn" type="submit">
                    Thêm mới
                </button>
            </form>
        </div>
        <footer class="modal-footer">
            <p class="modal-help">
                Need 
                <a href="">help?</a>
            </p>
        </footer>
    </div>
</div>
