                        </table>
                    </div>
                    <!--BEGIN CART MOBILE-->
                    <div class="table-mobile">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th colspan="2" style="text-align: center;">Sản Phẩm</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="thumbnail-img-mobile">
                                    <td><img class="img-fluid" src="" alt="" /></td>
                                    <td>
                                        <a href="" class="name-mobile">
